{
  "name": "@byyuurin/ui-kit",
  "type": "module",
  "version": "0.3.5",
  "packageManager": "pnpm@9.15.5",
  "description": "",
  "author": "Yuurin <byyuurin@gmail.com>",
  "license": "MIT",
  "homepage": "https://github.com/byyuurin/ui-kit#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/byyuurin/ui-kit.git"
  },
  "bugs": "https://github.com/byyuurin/ui-kit/issues",
  "keywords": [],
  "sideEffects": false,
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.mjs"
    },
    "./index": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.mjs"
    }
  },
  "main": "./dist/index.mjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "typesVersions": {
    "*": {
      "*": [
        "./dist/*",
        "./dist/index.d.ts"
      ]
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "unbuild",
    "dev": "unbuild --stub",
    "lint": "eslint .",
    "prepublishOnly": "nr build",
    "release": "bumpp && pnpm publish",
    "start": "esno src/index.ts",
    "test": "vitest",
    "typecheck": "tsc --noEmit",
    "prepare": "simple-git-hooks"
  },
  "dependencies": {
    "clsx": "^2.1.1"
  },
  "devDependencies": {
    "@antfu/ni": "^23.3.1",
    "@antfu/utils": "^8.1.0",
    "@byyuurin/eslint-config": "^1.7.0",
    "@types/node": "^22.13.2",
    "bumpp": "^9.11.1",
    "eslint": "^9.20.1",
    "eslint-plugin-format": "^1.0.1",
    "esno": "^4.8.0",
    "lint-staged": "^15.4.3",
    "pnpm": "^9.15.5",
    "simple-git-hooks": "^2.11.1",
    "typescript": "^5.7.3",
    "unbuild": "^3.3.1",
    "vite": "^6.1.0",
    "vitest": "^3.0.5"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged"
  },
  "lint-staged": {
    "*": "eslint --fix"
  }
}
